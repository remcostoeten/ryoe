{
  "build": {
      "beforeDevCommand": " bun dev",
    "beforeBuildCommand": " bun build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "notr",
  "version": "0.2.0",
  "identifier": "com.remcostoeten.notr",
  "plugins": {
    "process": {
      "active": true
    }
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Notr",
        "width": 960,
        "height": 400,
        "dragDropEnabled": true
      }
    ]
  }
}
