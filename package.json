{
    "name": "ryoe",
    "type": "module",
    "version": "0.08",
    "description": "A cross-platform desktop app built with Tauri, React & Rust",
    "keywords": [
        "shadcn",
        "tauri",
        "rust",
        "vite",
        "react",
        "tailwindcss",
        "ui",
        "desktop"
    ],
    "author": "Remco Stoeten",
    "license": "MIT",
    "scripts": {
        "dev": "vite",
        "build": "VITE_IGNORE_ERRORS=true bun run type-check || true && vite build",
        "type-check": "tsc --noEmit",
        "preview": "vite preview",
        "tauri": "tauri",
        "tauri:dev": "tauri dev",
        "tauri:build": "tauri build",
        "dev:bun": "sh ./commands/dev-bun.sh",
        "dev:web": "sh ./commands/dev-bun.sh --web-only",
        "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "gen": "drizzle-kit generate",
        "push": "drizzle-kit push",
        "build:output:clipboard": "sh ./commands/build-output.sh",
        "build:output:file": "sh ./commands/build-output.sh file tmp/build.log",
        "run:tauri": "sh ./commands/run-tauri.sh",
        "setup:hooks": "sh ./commands/setup-git-hooks.sh",
        "setup:bun": "sh ./commands/setup-bun-tauri.sh",
        "version:increment": "bun scripts/increment-version.js"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "dependencies": {
        "@blocknote/core": "^0.31.2",
        "@blocknote/mantine": "^0.31.2",
        "@blocknote/react": "^0.31.2",
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/sortable": "^10.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@libsql/client": "^0.15.8",
        "@mdx-js/react": "^3.1.0",
        "@mdx-js/rollup": "^3.1.0",
        "@radix-ui/react-avatar": "^1.1.10",
        "@radix-ui/react-checkbox": "^1.3.2",
        "@radix-ui/react-collapsible": "^1.1.11",
        "@radix-ui/react-context-menu": "^2.2.15",
        "@radix-ui/react-dialog": "^1.1.14",
        "@radix-ui/react-label": "^2.1.7",
        "@radix-ui/react-popover": "^1.1.14",
        "@radix-ui/react-scroll-area": "^1.2.9",
        "@radix-ui/react-select": "^2.2.5",
        "@radix-ui/react-separator": "^1.1.7",
        "@radix-ui/react-slot": "^1.2.3",
        "@radix-ui/react-tabs": "^1.1.12",
        "@radix-ui/react-tooltip": "^1.2.7",
        "@react-three/fiber": "^9.1.2",
        "@tailwindcss/vite": "^4.1.5",
        "@tanstack/react-query": "^5.80.10",
        "@tauri-apps/api": "^2.5.0",
        "@tauri-apps/plugin-dialog": "^2.2.2",
        "@tauri-apps/plugin-process": "^2.2.1",
        "@tauri-apps/plugin-shell": "^2.2.1",
        "@tauri-apps/plugin-store": "^2.2.0",
        "better-sqlite3": "^11.10.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "dotenv": "^16.5.0",
        "drizzle-orm": "^0.44.1",
        "framer-motion": "^12.15.0",
        "glob": "^11.0.3",
        "highlight.js": "^11.11.1",
        "lucide-react": "^0.513.0",
        "motion": "^12.15.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-error-boundary": "^6.0.0",
        "react-hook-form": "^7.56.1",
        "react-router": "^7.5.3",
        "rehype-highlight": "^7.0.2",
        "rehype-slug": "^6.0.0",
        "remark-gfm": "^4.0.1",
        "remark-toc": "^9.0.0",
        "tailwind-merge": "^3.2.0",
        "tailwindcss-animate": "^1.0.7",
        "three": "^0.177.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.25.1",
        "@tauri-apps/cli": "^2.5.0",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/better-sqlite3": "^7.6.13",
        "@types/node": "^22.15.3",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.3",
        "@types/react-query": "^1.2.9",
        "@types/three": "^0.177.0",
        "@vitejs/plugin-react": "^4.4.1",
        "drizzle-kit": "^0.31.1",
        "eslint": "^9.25.1",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^16.0.0",
        "lint-staged": "^15.5.1",
        "prettier": "3.5.3",
        "tailwindcss": "^4.1.5",
        "tsx": "^4.20.3",
        "tw-animate-css": "^1.2.8",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.31.1",
        "vite": "^6.3.4"
    }
}